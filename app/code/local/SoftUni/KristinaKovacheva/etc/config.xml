<?xml version="1.0" ?>
<config>
    <modules>
        <SoftUni_KristinaKovacheva>
            <version>1.0.0</version>
        </SoftUni_KristinaKovacheva>
    </modules>
    <!--here we write only the translation tag, all other tags are in separate adminhtml.xml file-->
    <adminhtml>
        <translate>
            <modules>
                <SoftUni_KristinaKovacheva>
                    <files>
                        <default>SoftUni_KristinaKovacheva.csv</default>
                    </files>
                </SoftUni_KristinaKovacheva>
            </modules>
        </translate>
        <layout>
            <updates>
                <softuni_kristinakovacheva module="SoftUni_KristinaKovacheva">
                    <file>softuni_kristinakovacheva.xml</file>
                </softuni_kristinakovacheva>
            </updates>
        </layout>
    </adminhtml>
    <!--for routers it always need to be in tag admin, not adminhtml-->
    <!--here we define that our controllers exist-->
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <!--here we rewrite magento controller so that our controller comes before theirs-->
                    <modules>
                        <softuni_kristinakovacheva before="Mage_Adminhtml">SoftUni_KristinaKovacheva</softuni_kristinakovacheva>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <global>
        <helpers>
            <SoftUni_KristinaKovacheva>
                <class>SoftUni_KristinaKovacheva_Helper</class>
            </SoftUni_KristinaKovacheva>
        </helpers>
        <blocks>
            <!--if with capital letters doesn't work-->
            <softuni_kristinakovacheva>
                <class>SoftUni_KristinaKovacheva_Block</class>
            </softuni_kristinakovacheva>
        </blocks>
        <models>
            <softuni_kristinakovacheva>
                <class>SoftUni_KristinaKovacheva_Model</class>
                <resourceModel>softuni_kristinakovacheva_resource</resourceModel>
            </softuni_kristinakovacheva>
            <softuni_kristinakovacheva_resource>
                <class>SoftUni_KristinaKovacheva_Model_Resource</class>
                <entities>
                    <kristinakovacheva>
                        <table>softuni_kristinakovacheva_kristinakovacheva</table>
                    </kristinakovacheva>
                </entities>
            </softuni_kristinakovacheva_resource>
        </models>
        <resources>
            <softuni_kristinakovacheva_setup>
                <setup>
                    <module>SoftUni_KristinaKovacheva</module>
                </setup>
            </softuni_kristinakovacheva_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <SoftUni_KristinaKovacheva>
                <use>standard</use>
                <args>
                    <module>SoftUni_KristinaKovacheva</module>
                    <frontName>softuni_kristinakovacheva</frontName>
                </args>
            </SoftUni_KristinaKovacheva>
        </routers>
        <translate>
            <modules>
                <SoftUni_KristinaKovacheva>
                    <files>
                        <default>SoftUni_KristinaKovacheva.csv</default>
                    </files>
                </SoftUni_KristinaKovacheva>
            </modules>
        </translate>
        <layout>
            <updates>
                <softuni_kristinakovacheva module="SoftUni_KristinaKovacheva">
                    <file>softuni_kristinakovacheva.xml</file>
                </softuni_kristinakovacheva>
            </updates>
        </layout>
    </frontend>
</config>